{
  "rust-analyzer": {
    "check": {
      "command": "clippy",
      "extraArgs": [
        [
          "--",
          "--allow=dead-code",
          "-Wclippy::style",
          "-Wclippy::perf",
          "-Wclippy::pedantic",
          "-Wclippy::nursery",
          "-Wclippy::cargo",
          "-Aclippy::cargo_common_metadata",
          "-Aclippy::missing_errors_doc",
          "-Aclippy::missing_panics_doc",
          "-Aclippy::missing_docs_in_private_items"
        ]
      ]
    }
  }
}
